<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

 <record id="report_re_paymentview_form" model="ir.ui.view">
            <field name="name">wizard.view.form</field>
            <field name="model">payment.redys</field>
            <field name="arch" type="xml">
               <form string="Sales Report">
                <sheet>
                    <group>
                        <group >
                            <field name="date_range" ></field>
                            <field name="from_date" ></field>
                            <field name="type_payment" ></field>
                            <field name="partner_id" ></field>
                            <field name="analysis_account_id" ></field>
                            <field name="salesman_id" ></field>
                            <field name="show_payment_this_company" ></field>
                            <field name="company_ids" 
                            readonly="not show_payment_this_company"
                             widget="many2many_tags" ></field>
                        </group>
                        <group >
                            <field name="to_date" ></field>
                            <field name="journal_id" ></field>
                            <field name="order_view" widget="radio" ></field>
                            <field name="hide_payment_cancel" ></field>
                            <field name="show_product"  invisible="1"  ></field>
                            <field name="domine_product"  invisible="1"  ></field>
                            <field name="product_id" 
                            domain="domine_product" invisible="show_product"
                             widget="many2many_tags"></field>
                            <field name="pro_cate_id"  invisible="show_product" ></field>
                            <field name="product_type"  invisible="show_product" ></field>
                            <field name="user_id" ></field>

                           
                           
                        </group>
                    </group>
                     <footer>
                      <button name="open_view"  string="Open Report" type="object"   class="btn-primary" />
                      <button string="Excel" name="get_excel_report" type="object"  class="btn-primary" />
                      <button string="Pdf" name="get_pdf_report" type="object"  class="btn-primary" /> 

                      <button string="Cancel" special='cancel' class="btn-secondry"  /> 
                     </footer> 
                </sheet>
                </form>
            </field>
        </record> 

          <record id="report_re_paymentaction" model="ir.actions.act_window">
            <field name="name"> sales report </field>
            <field name="res_model">payment.redys</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_re_paymentview_form"/>
            <field name="domain"></field>
            <field name="target">new</field>  
            <field name="context">{}</field>          
          </record> 
    </data>
</odoo>