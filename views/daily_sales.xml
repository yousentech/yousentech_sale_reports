<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

 <record id="report_re_paytoday_form" model="ir.ui.view">
            <field name="name">wizard.view.form</field>
            <field name="model">paytoday.redys</field>
            <field name="arch" type="xml">
               <form string="Daily Sales Reports">
                <sheet>
                    <group>
                        <group >
                            <field name="date_range" ></field>
                            <field name="from_date" ></field>
                            <field name="type_payment" ></field>
                            <field name="partner_id" ></field>
                            <field name="analysis_account_id" ></field>
                        </group>
                        <group >
                           
                            <field name="salesman_id" ></field>
                            <field name="to_date" ></field>
                            <!-- <field name="show_opening_company" ></field> -->
                            <!-- <field name="show_move_this_company" ></field> -->
                            <field name="company_ids" 
                           
                              ></field>
                              <!-- widget="many2many_tags" -->
                            <field name="hide_payment_cancel" ></field>
                            <field name="user_id" string='User Name' ></field>

                           
                           
                        </group>
                    </group>
                     <footer>
                      <button name="open_view"  string="Open report" type="object"   class="btn-primary" />
                      <button string="Excel" name="get_excel_report" type="object"  class="btn-primary" />
                      <button string="Pdf" name="get_pdf_report" type="object"  class="btn-primary" /> 

                      <button string="الغاء" special='cancel' class="btn-secondry"  /> 
                     </footer> 
                </sheet>
                </form>
            </field>
        </record> 

          <record id="report_re_paytoday_action" model="ir.actions.act_window">
            <field name="name"> daily sales report</field>
            <field name="res_model">paytoday.redys</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_re_paytoday_form"/>
            <field name="domain"></field>
            <field name="target">new</field>  
            <field name="context">{}</field>          
          </record> 
    </data>
</odoo>