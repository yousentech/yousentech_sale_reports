<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="excl_daily_sale_rpt" model="ir.actions.report">
            <field name="name">daily sale XLSX Report</field>
            <field name="model">paytoday.redys</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">yousentech_sale_reports.report_xlsx_daily_sale</field>
            <field name="report_file">xlsx_daily_sale</field>
        </record>
        <record id="print_daily_sale_rpt" model="ir.actions.report">
            <field name="name">daily.sale.pdf.report</field>
            <field name="model">paytoday.redys</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">yousentech_sale_reports.pdf_daily_sale_temp</field>
            <field name="report_file">yousentech_sale_reports.pdf_daily_sale_temp</field>
            <field name="paperformat_id" ref="yousentech_sale_reports.YOUR_FORMAT_pdf_report"/>
        </record>
        <template id="pdf_daily_sale_temp">
            <t t-call="web.html_container">
                        <t t-call="yousentech_sale_reports.header_footer_temp"/>

                <t t-call="web.external_layout">
                    <head>
                        <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
                        <link rel="preconnect" href="https://fonts.gstatic.com" />
                        <link href="https://fonts.googleapis.com/css2?family=El+Messiri&amp;display=swap" rel="stylesheet" /> -->
                        <link href="/yousentech_sale_reports/static/src/css/pdf_report.css" rel="stylesheet" />
                    </head>
                    <body>
                           

                        <div class="header-info">
                            <div class="invoice-name">
                                <h1> Daily Sales Report</h1>
                            </div>
                            <div class="wrapper">

                                <div id="details" class="clearfix">
                                    <table class="table-div">
                                        <tbody>

                                            <tr>
                                                <td t-attf-class="#{'table-one-td-left' if current_lang=='en_US' else 'table-one-td-right'}">Partner :</td>
                                                <td t-attf-class="#{'table-one-td1-left' if current_lang=='en_US' else 'table-one-td1-right'}" colspan="6">
                                                    <t t-esc="data['partner_name']"></t>
                                                </td>

                                                <td t-attf-class="#{'table-one-td-left' if current_lang=='en_US' else 'table-one-td-right'}">From Date :</td>
                                                <td t-attf-class="#{'table-one-td1-left' if current_lang=='en_US' else 'table-one-td1-right'}">
                                                    <t t-esc="data['from_date']"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td t-attf-class="#{'table-one-td-left' if current_lang=='en_US' else 'table-one-td-right'} text-nowrap">Salesman :</td>
                                                <td t-attf-class="#{'table-one-td1-left' if current_lang=='en_US' else 'table-one-td1-right'}" colspan="6">
                                                    <t t-esc="data['salesman_name']"></t>
                                                </td>

                                                <td t-attf-class="#{'table-one-td-left' if current_lang=='en_US' else 'table-one-td-right'} text-nowrap">To Date:</td>
                                                <td t-attf-class="#{'table-one-td1-left' if current_lang=='en_US' else 'table-one-td1-right'}">
                                                    <t t-esc="data['to_date']"></t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td t-attf-class="#{'table-one-td-left' if current_lang=='en_US' else 'table-one-td-right'} text-nowrap">Analysis Account:</td>
                                                <td t-attf-class="#{'table-one-td1-left' if current_lang=='en_US' else 'table-one-td1-right'}" colspan="6">
                                                    <t t-esc="data['analysis_account_name']"></t>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>




                               
                            </div>
                            <br/>


                            <br/>
                            <table class="invoice-items">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <t t-if="show_product">
                                            <th>Product</th>
                                        </t>
                                        <th>Inv Type </th>
                                        <th>Inv NO </th>
                                        <th>Partner</th>
                                        <th>Basic Total</th>

                                        <th>Total taxs</th>
                                        <th>Total including tax</th>
                                        <th>Cash</th>
                                        <th>Bank</th>
                                        <th>Residual</th>
                                        <t t-if="show_product">
                                            <th>Total Quantitiy</th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="td-1">Total</td>
                                        <td class="td-1" colspan="3">
                                            <span t-esc="', '.join(g for g in mycompany)"/>
                                        </td>
                                        <t t-if="show_product">
                                            <td class="td-1">_</td>
                                        </t>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_tax" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_with_tax" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_cash" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_bank" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="td-1">
                                            <t t-esc="sum_amount_radiuse" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>

                                        <t t-if="show_product">
                                            <td class="td-1">
                                                <t t-esc="sum_quantity"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-foreach="datas" t-as="item">

                                        <tr>
                                            <td class="td-2">
                                                <t t-esc="item['date']" />
                                            </td>
                                            <t t-if="show_product">
                                                <td class="td-2">
                                                    <t t-esc="item['prodect_name']"/>
                                                </td>
                                            </t>
                                            <td class="td-2">
                                                <t t-esc="item['move_type']"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['name']"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['partner_name']"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_untaxed']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_tax']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_with_tax']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_cash']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_bank']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['amount_radiuse']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>

                                            <t t-if="show_product">
                                                <td class="td-2">
                                                    <t t-esc="item['quantity']"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            <table class="invoice-items">
                                <tr>
                                    <!-- >إجمالي الفوترة الضريبة -->
                                    <td class="td-1">Total billing tax</td>

                                    <td class="td-1">
                                        <t t-esc="sum_amount_with_tax"/>
                                    </td>
                                    <!-- المدفوع نقدا -->
                                    <td class="td-1">Paid in cash</td>

                                    <td class="td-1">
                                        <t t-esc="sum_amount_cash"/>
                                    </td>
                                    <!-- المدفوع شبكة -->
                                    <td class="td-1"> Paid in Bank</td>
                                    <td class="td-1">
                                        <t t-esc="sum_amount_bank"/>
                                    </td>
                                    <!-- >إجمالي الفوترة الغير محصلة -->
                                    <td class="td-1">Total uncollected billing</td>
                                    <td class="td-1">
                                        <t t-esc="sum_amount_radiuse"/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table class="invoice-items">
                                <tr>
                                    <!--  نوع الشبكة -->
                                    <th style="background: #d2d2d2; color:black;">Payment type </th>
                                    <!-- المبلغ المدفوع -->
                                    <th style="background: #d2d2d2; color:black;">The amount paid</th>
                                </tr>
                                <tbody>
                                    <t t-foreach="jour_id_data" t-as="item">
                                        <tr>
                                            <td class="td-2">
                                                <t t-esc="item['name']"/>
                                            </td>
                                            <td class="td-2">
                                                <t t-esc="item['total']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <div id="notices">
                                <div>NOTICE:</div>
                                <div class="notice">....</div>
                            </div>
                        </div>
                    </body>


                </t>
            </t>
        </template>
    </data>
</odoo>
